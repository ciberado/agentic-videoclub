# AWS Configuration
# AWS region for Bedrock service
AWS_REGION=us-east-1

# AWS credentials for accessing Bedrock
# Replace with your actual AWS access key ID
AWS_ACCESS_KEY_ID=your_access_key_id_here

# Replace with your actual AWS secret access key  
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here

# AWS Bedrock Model Configuration
# The specific Claude model to use for LLM operations
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0

# Specific model for movie evaluation (uses BEDROCK_MODEL_ID as fallback)
EVALUATION_BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0

# Application Configuration
# Environment mode (development, production, test)
NODE_ENV=development

# Logging level (silly, debug, info, warn, error)
LOG_LEVEL=debug

# Test Configuration
# Limit number of movies to evaluate during integration tests (default: 3)
TEST_MOVIE_LIMIT=3

# Set to 'true' to run integration tests (requires AWS credentials)
RUN_INTEGRATION_TESTS=false

# Scraping Configuration
# Limit number of movie links to scrape from Prime Video (default: 20, test: 5)
SCRAPPING_LIMIT=20